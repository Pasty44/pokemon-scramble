{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": false,
      "strictNullChecks": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react",
      "baseUrl": "src",
      "paths": {
        "Pokemon": [ "src/pokemon"],
        "Screens": [ "src/screens"],
        "Styles": [ "src/styles"],
        "Scripts": [ "src/scripts"],
      },
      "noFallthroughCasesInSwitch": true
    },
    "include": [
      "src"
    ]
  }
  